<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="380dp"
    android:background="@drawable/symbol_selector_style">

    <LinearLayout
        android:id="@+id/indexTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="#293148"
        android:layout_weight="1">
        <TextView
            android:id="@+id/indexName"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_weight="9"
            android:text="지표이름"
            android:textSize="16dp"
            android:layout_marginLeft="18dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#293148"/>
        <ImageView
            android:id="@+id/closeImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_close_gray_24dp"
            android:background="#293148"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settingLout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/indexTitle"
        android:orientation="vertical"
        android:layout_weight="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/settingLout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/saveText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:text="저장"
            android:textSize="18dp"
            android:gravity="center|right"
            android:textStyle="bold"
            android:textColor="#3880E0"/>
    </LinearLayout>






</RelativeLayout>