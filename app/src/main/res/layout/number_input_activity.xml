<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:background="@drawable/symbol_selector_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#242B3D">
        <EditText
            android:id="@+id/inputNumberTxt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:focusableInTouchMode="false"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/three"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/four"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/five"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/six"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/seven"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/eight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/nine"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/zero"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/backSpaceImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/ic_backspace_white_24dp"/>
        <ImageView
            android:id="@+id/checkImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/ic_done_white_24dp"/>
    </LinearLayout>


</LinearLayout>